//The upvote form should be ready to change vote_type
$("#the-upvote-form").attr("action", "/posts/<%= @post_id %>/votes/<%= @vote.id %>/update_to_upvote");
$("#the-upvote-form").append("<input id = \"changed-to-upvote\" name=\"_method\" type=\"hidden\" value=\"patch\" />");

//The downvote form should be ready to delete the vote
$('#the-down-arrow').css('color', 'blue');
$("#the-downvote-form").attr("action", "/posts/<%= @post_id %>/votes/<%= @vote.id %>");
$("#the-downvote-form").append("<input id = \"undo-downvote\" name=\"_method\" type=\"hidden\" value=\"delete\" />");

$("#score-count").text("<%= @score %> Points")