/*
	In this function, user decides to downvote after upvoting. The upvote form should be prepared to update 
	vote_type while downvote form should be prepared to delete the entire vote.
*/
$('#the-up-arrow').css('color', 'black');
$("#the-upvote-form").attr("action", "/posts/<%= @post_id %>/votes/<%= @vote.id %>/update_to_upvote");
$("#undo-upvote").remove();
$("#changed-to-upvote").remove();
$("#the-upvote-form input[value='delete']").remove(); //from the upvoted form
$("#the-upvote-form").append("<input id = \"changed-to-upvote\" name=\"_method\" type=\"hidden\" value=\"patch\" />");

$('#the-down-arrow').css('color', 'blue');
$("#the-downvote-form-form").attr("action", "/posts/<%= @post_id %>/votes/<%= @vote.id %>");
$("#undo-downvote").remove();
$("#changed-to-downvote").remove();
$("#the-downvote-form input[value='patch']").remove(); //from the upvoted form
$("#the-downvote-form").append("<input id = \"undo-downvote\" name=\"_method\" type=\"hidden\" value=\"delete\" />");

$("#score-count").text("<%= @score %> Points");