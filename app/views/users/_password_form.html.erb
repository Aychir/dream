<%= form_for @user, :url => {:action => "update_password"} do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.password_field :current_password, class: "form-field", placeholder: "Current Password" %></p>
  </div>

  <div class="field">
    <p><%= form.password_field :password, class: "form-field", placeholder: "New Password" %></p>
  </div>

  <div class="field">
    <p><%= form.password_field :password_confirmation, class: "form-field", placeholder: "Confirm New Password"%></p>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
