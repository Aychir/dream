<div class = "form-template-outer">
  <div class = "form-template-cell">
    <div class = "form-template-inner">
      <div class = "insideFormTemplate">
        <h2><span class = "form-title">Forgot Your Password?</span></h2>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <p><%= f.email_field :email, placeholder: "Email", class: "form-field", autofocus: true, autocomplete: "email" %></p>
			  </div>

			  <div class="actions">
			    <%= f.submit "Send me reset password instructions", class: "loginButton" %>
			  </div>
			<% end %>

			<div class = "actions">
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            <% end -%>
          </div>
    </div>
  </div>
</div>

