<div class = "form-template-outer">
  <div class = "form-template-cell">
    <div class = "form-template-inner">
      <div class = "insideFormTemplate">
          <h2><span class = "form-title">Welcome to fun.</span></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <p>
            <%= f.text_field :username, placeholder: "Username", class: "form-field" %></p>
            <p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-field" %></p>
            <p>
            <%= f.text_field :screenname, placeholder: "Your Preferred Name (Optional)", class: "form-field" %></p>
          </div>

          <div class="field">
            <p><%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{ @minimum_password_length} Characters Minimum)", class: "form-field"  %></p>
          </div>

          <div class="field">
            <p><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-field" %></p>
          </div>

          <div class="actions">
            <%= f.submit "Sign up",  class: "loginButton" %>
          </div>

          <div class = "actions">
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
            <% end -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
