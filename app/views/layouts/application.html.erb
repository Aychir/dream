<!DOCTYPE html>
<html>
  <head>
    <title>Dream</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" %>
    <%= javascript_include_tag "https://code.jquery.com/jquery-3.3.1.min.js" %>
    <%= javascript_include_tag "https://unpkg.com/popper.js/dist/umd/popper.min.js" %>
    <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js" %>
    <%# stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css" %>
    <% if browser.ie? && (browser.version < 9) %>
        <%= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js" %>
        <%= javascript_include_tag "http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js" %>
    <%end%>

  </head>

  <body>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render "layouts/navbar" %>
    <div class = "container-fluid no-padding">
      <div class = "row">
        <div class = "col-12 col-md-2 col-xl-2">
          <%= render "layouts/sidebar" %>
        </div>
        <div id = "content" class = "col-12 col-md-10 col-xl-10 py-md-3 pl-md-5">
            <div class="spacer">
            </div>
          	<%if notice%>
          		<p class="notice"><%= notice %></p>
          	<%end%>
          	<%if alert%>
            	<p class="alert"><%= alert %></p>
            <%end%>
            <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
